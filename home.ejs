<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Campus Connect - Dashboard</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
  <script>
    tailwind.config = {
      theme: {
        extend: {
          fontFamily: { sans: ['Inter', 'sans-serif'] },
        },
      },
    };
  </script>
  <style>
    @keyframes fadeIn { from {opacity:0; transform:translateY(-20px);} to{opacity:1; transform:translateY(0);} }
    .new-post { animation: fadeIn 0.5s ease-out; }
  </style>
</head>
<body class="bg-gray-50 font-sans">

<div class="flex h-screen">
  <!-- Sidebar -->
  <aside id="sidebar" class="bg-white w-64 h-screen shadow-lg p-5 flex flex-col space-y-6 transform -translate-x-full md:translate-x-0 fixed md:relative top-0 left-0 transition-transform duration-300 ease-in-out z-50">
    
    <div class="flex items-center space-x-3 border-b pb-4">
        <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v11.494m-5.22-6.22l-1.06-1.06a8 8 0 1112.56 0l-1.06 1.06M12 6.253l5.22 5.22M12 6.253L6.78 11.473"></path>
        </svg>
        <h1 class="text-xl font-bold text-gray-800">Campus Connect</h1>
    </div>

    <!-- Profile -->
    <div class="flex flex-col items-center space-y-3 pt-4">
      <div class="relative">
        <img id="sidebar-profile-pic" src="https://www.bing.com/th/id/OIP.qOSjSxoUNci9aPL9spX_eQHaHa?w=201&h=211&c=8&rs=1&qlt=90&o=6&cb=thwsc4&dpr=1.3&pid=3.1&rm=2" alt="Profile" class="rounded-full w-24 h-24 shadow-md border-2 border-blue-500 cursor-pointer" />
        <button id="edit-profile-btn" class="absolute bottom-0 right-0 bg-white rounded-full p-1 shadow-md hover:bg-gray-100">‚úèÔ∏è</button>
      </div>
      <h2 id="sidebar-user-name" class="font-semibold text-lg text-gray-800">Jessica Miller</h2>
      <div class="flex items-center space-x-2">
        <p id="sidebar-bio" class="text-sm text-gray-500 text-center">Computer Science Student</p>
        <button id="edit-bio-btn" class="text-blue-600 hover:text-blue-800 cursor-pointer">‚úèÔ∏è</button>
      </div>
    </div>

    <!-- Navigation -->
    <nav id="sidebar-nav" class="flex-1 space-y-2 pt-6">
      <a href="#" class="nav-link flex items-center p-3 text-gray-700 bg-blue-100 text-blue-600 font-semibold rounded-lg">
        üè† <span class="ml-2">Dashboard</span>
      </a>
      <a href="/main/myfeed" class="nav-link flex items-center p-3 text-gray-700 hover:bg-gray-100 rounded-lg transition-colors duration-200">
        üìÑ <span class="ml-2">My Feed</span>
      </a>
      <a href="/main/message" class="nav-link flex items-center p-3 text-gray-700 hover:bg-gray-100 rounded-lg transition-colors duration-200">
        üí¨ <span class="ml-2">Messages</span>
      </a>
    </nav>

    <div class="mt-auto">
       <a href="#" class="flex items-center p-3 text-gray-700 hover:bg-red-100 hover:text-red-600 rounded-lg transition-colors duration-200">
          üîì <span class="ml-3 font-medium">Logout</span>
      </a>
    </div>
  </aside>

  <div id="sidebar-overlay" class="fixed inset-0 bg-black bg-opacity-50 z-40 hidden md:hidden"></div>
  
  <!-- Main Content -->
  <div class="flex-1 flex flex-col overflow-hidden">
    <header class="bg-white shadow-sm flex items-center justify-between px-6 py-3 shrink-0">
      <button id="menu-btn" class="md:hidden block text-gray-600 focus:outline-none">
        <svg class="w-7 h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>

      <div class="relative hidden md:block">
        <input type="text" placeholder="Search..." class="bg-gray-100 rounded-full py-2 px-4 pl-10 focus:outline-none focus:ring-2 focus:ring-blue-500 w-96">
        <svg class="w-5 h-5 text-gray-400 absolute left-3 top-1/2 transform -translate-y-1/2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
        </svg>
      </div>

      <div class="flex items-center space-x-4">
        <!-- Notification Icon -->
        <button id="notification-btn" class="relative text-gray-500 hover:text-blue-600 focus:outline-none">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"></path>
          </svg>
          <span id="notification-count" class="absolute -top-1 -right-1 bg-red-600 text-white text-xs w-4 h-4 rounded-full flex items-center justify-center">3</span>
        </button>

        <!-- User Avatar -->
        <img src="https://www.bing.com/th/id/OIP.qOSjSxoUNci9aPL9spX_eQHaHa?w=201&h=211&c=8&rs=1&qlt=90&o=6&cb=thwsc4&dpr=1.3&pid=3.1&rm=2" alt="User Avatar" class="w-10 h-10 rounded-full">
      </div>
    </header>

    <main class="flex-1 overflow-x-hidden overflow-y-auto bg-gray-50 p-4 sm:p-6">
      <div class="container mx-auto grid grid-cols-1 lg:grid-cols-3 gap-8">
        <div class="lg:col-span-2 space-y-6">
          <div class="bg-gradient-to-r from-blue-600 to-indigo-700 p-8 rounded-xl shadow-lg text-white">
            <h2 class="text-3xl font-bold mb-2">Welcome back, Jessica! üéì</h2>
            <p class="text-blue-100">Ready to connect, learn, and collaborate? Here's what's new on campus today.</p>
          </div>

          <div class="bg-white p-5 rounded-xl shadow-md">
            <div class="flex items-start space-x-3">
              <img src="https://www.bing.com/th/id/OIP.qOSjSxoUNci9aPL9spX_eQHaHa?w=201&h=211&c=8&rs=1&qlt=90&o=6&cb=thwsc4&dpr=1.3&pid=3.1&rm=2" alt="User Avatar" class="w-12 h-12 rounded-full">
              <textarea id="create-post-input" placeholder="What's on your mind, Jessica?" class="w-full bg-gray-100 rounded-lg p-3 focus:outline-none focus:ring-2 focus:ring-blue-500 resize-none" rows="2"></textarea>
            </div>
            <div class="flex justify-end mt-4">
              <button id="create-post-button" class="bg-blue-600 text-white font-semibold px-6 py-2 rounded-full hover:bg-blue-700 transition-colors duration-200 disabled:bg-blue-300 disabled:cursor-not-allowed" disabled>Post</button>
            </div>
          </div>

          <div id="post-feed" class="space-y-6"></div>
        </div>

        <div class="space-y-6">
          <div class="bg-white p-5 rounded-xl shadow-md">
            <h3 class="font-bold text-lg mb-4 text-gray-800">Upcoming Events</h3>
            <ul class="space-y-4">
              <li class="flex items-center space-x-4">
                <div class="bg-red-100 text-red-600 p-3 rounded-lg font-bold text-center">
                  <p class="text-sm">AUG</p><p class="text-2xl">29</p>
                </div>
                <div>
                  <h4 class="font-semibold">Guest Lecture: AI in 2025</h4>
                  <p class="text-sm text-gray-500">Auditorium A, 11:00 AM</p>
                </div>
              </li>
              <li class="flex items-center space-x-4">
                <div class="bg-green-100 text-green-600 p-3 rounded-lg font-bold text-center">
                  <p class="text-sm">SEP</p><p class="text-2xl">05</p>
                </div>
                <div>
                  <h4 class="font-semibold">Photography Club Meetup</h4>
                  <p class="text-sm text-gray-500">Student Center, 6:00 PM</p>
                </div>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </main>
  </div>
</div>

<!-- Edit Profile Modal -->
<div id="editProfileModal" class="hidden fixed inset-0 bg-black bg-opacity-50 flex justify-center items-center z-50">
  <div class="bg-white p-6 rounded-xl shadow-lg w-96 relative">
    <button id="closeProfileModal" class="absolute top-3 right-3 text-gray-600 hover:text-black text-xl">&times;</button>
    <h2 class="text-xl font-bold mb-4 text-center">Edit Profile</h2>
    <div class="flex flex-col items-center mb-4">
      <img id="profileModalPic" src="https://www.bing.com/th/id/OIP.qOSjSxoUNci9aPL9spX_eQHaHa?w=201&h=211&c=8&rs=1&qlt=90&o=6&cb=thwsc4&dpr=1.3&pid=3.1&rm=2" alt="Profile" class="w-24 h-24 rounded-full shadow-md mb-3 cursor-pointer">
      <input type="file" id="changeProfilePic" class="hidden">
      <button id="changePicBtn" class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700">Change Photo</button>
    </div>
    <input id="modalFullName" type="text" class="w-full p-3 border rounded-lg mb-3" placeholder="Full Name">
    <textarea id="modalBio" class="w-full p-3 border rounded-lg mb-4" placeholder="Bio" rows="2"></textarea>
    <button id="saveProfileBtn" class="w-full bg-green-600 hover:bg-green-700 text-white py-2 rounded-lg">Save Changes</button>
  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', () => {
  // Elements
  const sidebar = document.getElementById('sidebar');
  const menuBtn = document.getElementById('menu-btn');
  const overlay = document.getElementById('sidebar-overlay');
  const postFeed = document.getElementById('post-feed');
  const postInput = document.getElementById('create-post-input');
  const postButton = document.getElementById('create-post-button');

  const sidebarUserName = document.getElementById('sidebar-user-name');
  const sidebarBio = document.getElementById('sidebar-bio');
  const sidebarProfilePic = document.getElementById('sidebar-profile-pic');

  const editProfileBtn = document.getElementById('edit-profile-btn');
  const editBioBtn = document.getElementById('edit-bio-btn');
  const editProfileModal = document.getElementById('editProfileModal');
  const closeProfileModal = document.getElementById('closeProfileModal');
  const profileModalPic = document.getElementById('profileModalPic');
  const changeProfilePic = document.getElementById('changeProfilePic');
  const changePicBtn = document.getElementById('changePicBtn');
  const modalFullName = document.getElementById('modalFullName');
  const modalBio = document.getElementById('modalBio');
  const saveProfileBtn = document.getElementById('saveProfileBtn');

  const notificationBtn = document.getElementById('notification-btn');
  const notificationCount = document.getElementById('notification-count');

  // Sidebar toggle
  const toggleSidebar = () => {
    sidebar.classList.toggle('-translate-x-full');
    overlay.classList.toggle('hidden');
  };
  menuBtn.addEventListener('click', toggleSidebar);
  overlay.addEventListener('click', toggleSidebar);

  // Edit profile modal
  editProfileBtn.addEventListener('click', () => {
    modalFullName.value = sidebarUserName.textContent;
    modalBio.value = sidebarBio.textContent;
    profileModalPic.src = sidebarProfilePic.src;
    editProfileModal.classList.remove('hidden');
  });
  closeProfileModal.addEventListener('click', () => editProfileModal.classList.add('hidden'));
  changePicBtn.addEventListener('click', () => changeProfilePic.click());
  changeProfilePic.addEventListener('change', (e) => {
    const file = e.target.files[0];
    if(file){
      const reader = new FileReader();
      reader.onload = () => profileModalPic.src = reader.result;
      reader.readAsDataURL(file);
    }
  });
  saveProfileBtn.addEventListener('click', () => {
    sidebarUserName.textContent = modalFullName.value;
    sidebarBio.textContent = modalBio.value;
    sidebarProfilePic.src = profileModalPic.src;
    editProfileModal.classList.add('hidden');
  });

  // Inline bio edit
  editBioBtn.addEventListener('click', () => {
    const newBio = prompt("Edit your bio:", sidebarBio.textContent);
    if(newBio !== null) sidebarBio.textContent = newBio;
  });

  // Post creation
  postInput.addEventListener('input', () => {
    postButton.disabled = postInput.value.trim().length === 0;
    postInput.style.height = 'auto';
    postInput.style.height = postInput.scrollHeight + 'px';
  });

  postButton.addEventListener('click', () => {
    const content = postInput.value.trim();
    if(!content) return;
    const post = document.createElement('div');
    post.className = 'bg-white p-5 rounded-xl shadow-md new-post';
    post.innerHTML = `
      <div class="flex items-start space-x-3">
        <img src="${sidebarProfilePic.src}" alt="Avatar" class="w-12 h-12 rounded-full">
        <div>
          <h4 class="font-semibold">${sidebarUserName.textContent}</h4>
          <p class="text-gray-700 mt-1">${content}</p>
        </div>
      </div>`;
    postFeed.prepend(post);
    postInput.value = '';
    postButton.disabled = true;
    postInput.style.height = 'auto';
  });

  // Notification click
  notificationBtn.addEventListener('click', () => {
    alert('You have ' + notificationCount.textContent + ' new notifications! (simulated)');
    notificationCount.textContent = '0';
  });
});
</script>
</body>
</html>
